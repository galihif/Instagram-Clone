<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
  <!-- Larger circle -->
  <item>
    <shape android:shape="oval">
      <padding
          android:bottom="16dp"
          android:left="16dp"
          android:right="16dp"
          android:top="16dp" />
      <size
          android:width="100dp"
          android:height="100dp" />
      <stroke
          android:width="8dp"
          android:color="#fff" />
    </shape>
  </item>
  <!--  middle -->
  <item>
    <selector>
      <item android:state_pressed="true">
        <shape android:shape="oval">
          <padding
              android:bottom="20dp"
              android:left="20dp"
              android:right="20dp"
              android:top="20dp" />
          <size
              android:width="120dp"
              android:height="120dp" />
          <solid
              android:width="20dp"
              android:color="@color/white" />
        </shape>
      </item>
      <item>
        <shape android:shape="oval">
          <padding
              android:bottom="20dp"
              android:left="20dp"
              android:right="20dp"
              android:top="20dp" />
          <size
              android:width="120dp"
              android:height="120dp" />
          <solid
              android:width="20dp"
              android:color="@color/white" />
        </shape>
      </item>
    </selector>
  </item>
</layer-list>